@model MVCDemo.Model.MyStudent

@{
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="table-responsive">
    <h1><b>UPDATE DATA HERE</b></h1>

    <form method="post" action="/Home/Edit">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td>Name</td>
                    <td>
                        <input type="hidden" name="No" value="@Model.No"/>
                        <input type="text" name="Name" value ="@Model.Name" />
                    </td>
                    <td style="color: red">
                        @Html.ValidationMessage("Name")
                    </td>
                </tr>

                <tr>
                    <td>Age</td>
                    <td>
                        <input type="text" name="Age" value="@Model.Age"/>
                    </td>
                    <td style="color: red">
                        @Html.ValidationMessage("Age")
                    </td>
                </tr>

                <tr>
                    <td>EMail</td>
                    <td>
                        <input type="text" name="EMail" value="@Model.EMail"/>
                    </td>
                    <td style="color: red">
                        @Html.ValidationMessage("EMail")
                    </td>
                </tr>

                <tr>
                    <td>Address</td>
                    <td>
                        <input type="text" name="Address" value="@Model.Address"/>
                    </td>
                    <td style="color: red">
                        @Html.ValidationMessage("Address")
                    </td>
                </tr>


                <tr>
                    <td colspan="3">
                        <center>
                            <input type="submit" name="btnCreate" value="Update Record" />
                        </center>
                    </td>
                </tr>
            </tbody>
        </table>

        <hr />
        <p class="alert-danger">
            @ViewBag.Message
        </p>
    </form>

</div>